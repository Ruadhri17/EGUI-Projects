@model mvc.Models.RecipeView
@{
    ViewData["Title"] = "Add Recipe - Text";
}
<div class="container">
    <form asp-action="AddTextDesc" asp-controller="Home">
    <div class="row">
        <div class="col-12">
            <div class="mb-3">
                <label for="r_name" class="form-label">Recipe Name</label>
                <input asp-for="r_name" type="text" value=@Model.r_name class="form-control" id="r_name" required>
                @if(ViewBag.message != null)
                {
                <div class="alert alert-danger" role="alert">@ViewBag.message</div>
                }
            </div>
            <div class="mb-3">
                <label for="r_description" class="form-label">Recipe Description</label>
                <textarea asp-for='r_description' class="form-control" id="r_description" rows="6" required>@Model.r_description</textarea>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12"> 
            <div class="d-grid d-md-flex ustify-content-md-end">
                <button type="submit" class="btn btn-success">Save and move to ingredients</button>
                <button type="button" class="btn btn-danger"  onclick="location.href='@Url.Action("MainMenu","Home")'">Cancel</button>
            </div>
        </div> 
    </div>
   </form>
</div>
